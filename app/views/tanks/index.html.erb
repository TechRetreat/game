<div class="tr-container">
  <div class="header-row">
    <h1>Tanks</h1>
    <%= link_to 'New Tank', new_tank_path, class:"button primary" %>
    </div>

  <%
    my_tanks = []
    other_tanks = []
    @tanks.sort_by(&:created_at).each do |match|
      if user_owns_match match
        my_tanks << match
      else
        other_tanks << match
      end
    end
  %>


  <h3>My tanks</h3>
  <div class="panel panel-default">
    <div class="panel-body">
      <% my_tanks.each do |tank| %>
        <div class="row list-item" data-no-turbolink>
          <div class="tank-color" style="background-color:<%= tank.color.html_safe %>"></div>
          <div class="tank-data">
            <h3><%= tank.name %></h3>
            <p>
              <%= link_to 'Code', edit_tank_path(tank), class:"button primary" %>
              <%= link_to 'Info', tank, class:"button" %>
              <%= link_to 'Destroy', tank, method: :delete, data: { confirm: 'Are you sure?' }, class:"button" %>
            </p>
          </div>
          <div class="rank">
            #42
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <h3>Other tanks</h3>

  <div class="panel panel-default">
    <div class="panel-body">
      <% other_tanks.each do |tank| %>
        <div class="row list-item" data-no-turbolink>
          <div class="tank-color" style="background-color:<%= tank.color.html_safe %>"></div>
          <div class="tank-data">
            <h3><%= tank.name %></h3>
            <p>
              <%= link_to 'Info', tank, class:"button" %>
            </p>
          </div>
          <div class="rank">
            #42
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
