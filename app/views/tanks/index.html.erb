<div class="tr-container">
    <div class="header-row">
        <h1>Tanks</h1>
        <%= link_to 'New Tank', new_tank_path, class:"button" %>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            <% @tanks.each do |tank| %>
                <div class="row list-item" data-no-turbolink>
                    <div class="tank-color" style="background-color:<%= tank.color.html_safe %>"></div>
                    <div class="tank-data">
                        <h3><%= tank.name %></h3>
                        <p>
                        <%= link_to 'Show', tank %>
                        <% if !tank.owner.nil? and !current_user.nil? and tank.owner.id.equal? current_user.id %>
                            <%= link_to 'Edit', edit_tank_path(tank) %>
                            <%= link_to 'Destroy', tank, method: :delete, data: { confirm: 'Are you sure?' } %>
                        <% end %>
                        </p>
                    </div>
                </div>
            <% end %>
        </div>
    </div>

    <br>
</div>
