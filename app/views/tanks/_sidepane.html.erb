<div class="toolbar toolbar-editor right">
  <ul>
    <li id="open_info"><i class="fa fa-question"></i><div class="label">Help</div></li>
    <li id="play-btn"><i class="fa fa-play"></i><div class="label">Run Code</div></li>
  </ul>
</div>

<div id="play">
  <canvas id="tranque-replay"></canvas>
  <div id="replay-notices">
    <div id="toolbar">TechTanks Console <a id="clear-console">Clear</a></div>
    <div id="console"></div>
  </div>
  <%= javascript_include_tag 'paperscripts/Replay', 'data-turbolinks-track' => true, type: 'text/paperscript', canvas: 'tranque-replay' %>
</div>
<div id="info">
  <%= render 'docs' %>
</div>
<script>
  //Env variables
  window.WEBSOCKETS_HOST = "<%= ENV['RAILS_ENV'] == 'production' ? 'staging.techtanks.techretreat.ca' : 'localhost:3000' %>/websocket";
  window.DEFAULT_TANKS = [
      <%= Tank.where(owner: nil, public: true).map(&:id).join(", ").html_safe %>
  ];
  window.TANK_ID = <%= @tank.id %>;
</script>
