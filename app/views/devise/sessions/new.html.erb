<div class="form-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => 'form-auth' }) do |f| %>
    <h2 class="form-auth-heading">Log in</h2>

    <div class="field">
      <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "Email address", type: "email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: "Password", type: "password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field form-auth-checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "form-auth-checkbox-label" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block form-auth-button" %>
    </div>

    <div class="form-bottom-links">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>